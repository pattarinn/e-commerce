<p id="notice"><%= notice %></p>
<div class="col">
  <h1>Products</h1>
  <table class="table table-hover">
    <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Stock</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @products.each do |p| %>
      <tr>
        <td><%= p.title %></td>
        <td><%= p.description %></td>
        <td><%= p.stock %></td>
        <td><%= p.price %></td>
        <td>
          <a class="fas fa-eye" href=<%= product_path(p) %>></a>
        <% if admin_signed_in? %>
            <a class="fas fa-pen" href=<%= edit_product_path(p) %>></a>
<!--            <a class="fas fa-trash" href=""></a>-->
            <%= link_to 'Delete', p, method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
        <% end %>
      </tr>
    <% end %>
    </tbody>
  </table>
  <br>
  <% if admin_signed_in? %>
    <%= link_to 'New Product', new_product_path %>
    <%= link_to 'Sign Out', destroy_admin_session_path, method: :delete %>
  <% else %>
    <%= link_to 'Sign In', new_admin_session_path %>
  <% end %>
  <div class="col-6">
    <%= paginate @products %>
  </div>
</div>