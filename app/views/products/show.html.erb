<%= stylesheet_link_tag "show_product.css" %>

<p id="notice"><%= notice %></p>

<body>
<div class="title">Title: <%= @product.title %></div>
<div class="description">Description: <%= @product.description %></div>
<div class="status">Status: <%= @product.status %></div>
<div class="category">Category:
  <% if @product.categories.present? %>
    <% @product.categories.each do |category| %>
      <%= link_to "#{category.name}", category_path(category) %>
    <% end %>
  <% else %>
    <div>
      NA
    </div>
  <% end %>
</div>
<div class="stock">Stock: <%= @product.stock %></div>
<div class="price">Price: <%= @product.price %></div>
<div>
  <strong>Cover image</strong>
  <% if @product.cover_image.attached? %>
    <%= image_tag @product.cover_image, width: '200px' %>
  <% end %>
</div>

<div>
  <strong>Images</strong>
  <% if @product.images.attached? %>
    <% @product.images.each do |image| %>
      <%= image_tag image, height: '200px' %>
    <% end %>
  <% end %>
</div>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
</body>