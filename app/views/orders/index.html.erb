<table class="table table-hover">
  <thead class="thead-dark">
  <tr>
    <th scope="col">Order Id</th>
    <th scope="col">Customer Name</th>
    <th scope="col">Address</th>
    <th scope="col">Product Name</th>
    <th scope="col">Product ID</th>
    <th scope="col">Amount</th>
    <th scope="col"></th>
    <th scope="col"></th>
  </tr>
  </thead>
  <% @orders.each do |order| %>
    <tbody>
    <tr>
      <th scope="row">
        <%= order.id %></th>
      <td>
        <%= order.customer_name %></td>
      <td>
        <%= order.address %></td>
      <td>
        <%= order.product_name %></td>
      <td>
        <%= order.product_id %></td>
      <td>
        <%= order.amount %></td>
      <td>
        <a class="btn btn-warning" href="<%= edit_order_path(order) %>">Edit</a>
      </td>
      <td>
        <%= link_to('Delete', order, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger") %>
      </td>
    </tr>
    </tbody>
  <% end %>
</table>
<!--  </div>-->
<div class="menu">
  <div class="left">
    <div class="b1"><%= link_to 'Homepage', products_path, class:"btn btn-info" %></div>
    <div class="b1"><%= link_to 'Sign Out', destroy_admin_session_path, method: :delete, class: "btn btn-info" %></div>
  </div>
  <div class="right">
    <div class="paginate"><%= paginate @orders %></div>
  </div>
</div>
